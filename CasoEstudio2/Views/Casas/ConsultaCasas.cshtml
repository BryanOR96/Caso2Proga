@model IEnumerable<CasoEstudio2.Models.CasasModel>

@{
    ViewBag.Title = "Consulta de Casas";
}

<link rel="stylesheet" type="text/css" href="~/Content/styles.css" />

<div class="container">
    <h2>Consulta de Casas</h2>
    <table>
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Usuario</th>
                <th>Estado</th>
                <th>Fecha de Alquiler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var casa in Model)
            {
                <tr>
                    <td>@casa.DescripcionCasa</td>
                    <td>@casa.PrecioCasa.ToString("C")</td>
                    <td>@casa.UsuarioAlquiler ?? "N/A"</td>
                    <td class="@(casa.Estado == "Disponible" ? "status-available" : "status-reserved")">
                        @casa.Estado
                    </td>
                    <td>@casa.FechaAlquiler?.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
